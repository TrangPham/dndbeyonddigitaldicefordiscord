{
  "manifest_version": 2,
  "name": "DnDiscord Dice Roller Plugin",
  "description": "Connects DndBeyond's Digital Dice with Discord",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["https://www.dndbeyond.com/profile/*/characters/*"],
    "exclude_matches": ["https://www.dndbeyond.com/profile/*/characters/*/*"],
    "js": ["run.js"]
  }]
}